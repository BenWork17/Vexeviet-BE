{
  "name": "vexeviet-backend",
  "version": "1.0.0",
  "private": true,
  "description": "VeXeViet Backend Monorepo",
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "concurrently -n \"docker,user,route,booking,gateway\" -c \"blue,green,yellow,cyan,magenta\" \"pnpm docker:up\" \"pnpm --filter @vexeviet/user-service dev\" \"pnpm --filter @vexeviet/route-service dev\" \"pnpm --filter @vexeviet/booking-service dev\" \"pnpm --filter @vexeviet/api-gateway dev\"",
    "dev:services": "concurrently -n \"user,route,booking,gateway\" -c \"green,yellow,cyan,magenta\" \"pnpm --filter @vexeviet/user-service dev\" \"pnpm --filter @vexeviet/route-service dev\" \"pnpm --filter @vexeviet/booking-service dev\" \"pnpm --filter @vexeviet/api-gateway dev\"",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prisma:generate": "turbo run prisma:generate",
    "prisma:migrate": "turbo run prisma:migrate",
    "db:seed": "dotenv -e .env -- ts-node packages/database/prisma/seed.ts",
    "db:seed-routes": "dotenv -e .env -- ts-node packages/database/prisma/seed-full-routes.ts",
    "test:perf": "k6 run tests/performance/k6/run-all.js",
    "test:perf:health": "k6 run tests/performance/k6/scenarios/health-check.js",
    "test:perf:auth": "k6 run tests/performance/k6/scenarios/auth-flow.js",
    "test:perf:search": "k6 run tests/performance/k6/scenarios/search-routes.js",
    "test:perf:booking": "k6 run tests/performance/k6/scenarios/booking-flow.js",
    "test:integration": "newman run tests/integration/VeXeViet-API.postman_collection.json -e tests/integration/VeXeViet-API.postman_environment.json"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
